    monoloog(monoloog4) == True

          

def standard_commands(answer):
    if answer.lower() == "i" or answer.lower() == "inventory":
        print("Your current inventory:")
        if len(inventory) >= 1:
            print('-', end='')
            print('\n-'.join(inventory))
            print('')
            
    elif answer.lower() == 'swim':
        print('your room is not a pool silly')
    elif answer.lower() == 'jump':
        print('the whole floor is shaking!')
    elif answer.lower() == 'scream':
        print('AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAGHHHHH!!')
    elif answer.lower() == 'eat':
        print('your mom is making dinner right now, a bit more patience')
    return(answer)
    
    if answer == 'look':
        if locatie == 'nightstand':
            print("my bed and nightstand, my backpack is here as well!")
            nightstand.look = True 
        return True,  mom.look,desk.look,nightstand.look
    elif locatie == 'desk':
        print("I see my favorite videogames, PC and some secret candy stash.")
        desk.look = True
        return True,  mom.look,desk.look,nightstand.look
    elif locatie == 'mom':
        print("that's my mom, I love her, let's give her my lunch like she asked us.")
        mom.look = True
        return True, mom.look,desk.look,nightstand.look
    else: 
        return True,  mom.look,desk.look,nightstand.look

def item_pickup(locatie, hw, lunch, videogame):
    if locatie == nightstand and nightstand.check:
        if not itemhw:
            print("you've added 'homework' to your inventory")
            inventory.append("homework")
            hw = True
    
    if locatie == nightstand and nightstand.check:
        if not itemlunch:
            print("you've added 'lunch' to your inventory")
            inventory.append("lunch")
            lunch = True
            
    if locatie == desk and desk.check:
        if not itemvideogame:
            print("you've added 'Tony Hawk's Pro Skater' to you inventory")
            inventory.append("'Tony Hawk's Pro Skater disk'")
            videogame = True
            return locatie, hw, lunch, videogame


