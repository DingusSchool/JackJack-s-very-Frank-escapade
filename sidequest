def player_completed_task(itemhw, desk,itemvideogame, mom):
    if itemhw and 'go' in desk:
        return True
    elif player_completed_task2:
        if itemlunch and 'go' in mom:
            return True
    elif player_completed_task3:
        if itemvideogame and 'go' in desk:
            return True
            
    
    
    
if player_completed_task:
