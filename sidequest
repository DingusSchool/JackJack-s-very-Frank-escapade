while True:
    answer = input('>>>> ').lower()
    if 'grab' in answer: 
        itemhw, itemlunch, itemvideogame
    if 'give' in answer or 'place' in answer:
        location, mom, desk, nightstand, itemhw, itemlunch, itemvideogame
          

          


def player_completed_task(itemhw, itemlunch, itemvideogame):
    global monoloog2, monoloog3, monoloog4, location, answer
    if itemhw in inventory and location == desk and answer == 'place':
        monoloog2 = True
    elif itemlunch in inventory and location == mom and answer =='give':
        monoloog3 = True
    elif itemvideogame in inventory and location == desk and answer =='place':
        monoloog4 = True
    return itemhw, itemlunch, itemvideogame

def standard_commands(answer):
    if answer.lower() == "i" or answer.lower() == "inventory":
        print("Your current inventory:")
        if len(inventory) >= 1:
            print('-', end='')
            print('\n-'.join(inventory))
            print('')
            
    elif answer.lower() == 'swim':
        print('your room is not a pool silly')
    elif answer.lower() == 'jump':
        print('the whole floor is shaking!')
    elif answer.lower() == 'scream':
        print('AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAGHHHHH!!')
    elif answer.lower() == 'eat':
        print('your mom is making dinner right now, a bit more patience')
    
    if answer == look:
        if locatie == 'nightstand':
            print("my bed and nightstand, my backpack is here as well!")
            nightstand.look = True 
        return True,  mom.look,desk.look,nightstand.look
    elif locatie == desk:
        print("I see my favorite videogames, PC and some secret candy stash.")
        desk.look = True
        return True,  mom.look,desk.look,nightstand.look
    elif locatie == mom:
        print("that's my mom, I love her, let's give her my lunch like she asked us.")
        mom.look = True
        return True, mom.look,desk.look,nightstand.look
    else: 
        return True,  mom.look,desk.look,nightstand.look

def item_pickup(item, inventory, homework, lunch, videogame):
    if item == homework and location == nightstand:
        if not homework:
            inventory.append('homework')
            homework = True
            print('You picked up your homework')
    if item == lunch and location == nightstand:
        if not lunch:
            inventory.append('lunch')
            lunch = True
            print("You picked up your lunch")
    if item == videogame and location == desk:
        if not videogame:
            inventory.append("Tony Hawk's Pro Skater")
            videogame = True
            print("'you picked up 'Tony Hawk's Pro Skater'")
    else:
        print("You can't pick up that item here.")
    return location, hw, lunch, videogame


